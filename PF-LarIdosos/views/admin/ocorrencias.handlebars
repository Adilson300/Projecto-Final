<h2 class="mt-3">Lista de Ocorrências</h2>
<br>
<a href="/admin/ocorrencias/add"><button class="btn btn-primary">Nova Occorência</button>
</a>


{{#each ocorrencias}}
  <div class="card mt-4">
      <div class="card-body">
            <h4>Nome Completo: {{idoso.nomecompleto}}</h4>
            <small>Tipo de Ocorrência: {{tipoocorrencia}}</small><br>
            <small>Data da Ocorrência: {{data}}</small>
            <small>Teve Assistência Médica: {{assistenciamedica}}</small><br> 
            <small>Descrição: {{descricao}}</small>
      </div>
  </div>

  {{else}}
  <h5 class="mt-3">Nenhum Ocorrência Registrada! </h5>
{{/each}}
