<h2 class="mt-3">Lista de Funcionários</h2>
<br>
<a href="/admin/funcionarios/add">
    <button class="btn btn-primary">Novo Funcionário</button>
</a>

{{#each funcionarios}}
  <div class="card mt-4">
      <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Função: {{funcao}}</small><br>
            <small>Telefone: {{telefone}}</small><br>
            <a href="/admin/funcionarios/edit/{{_id}}"><button class="btn btn-primary mt-4">Editar </button></a>
            <form action="/admin/funcionarios/deletar" method="POST">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2"> Deletar</button>
            </form>
      </div>
  </div>

  {{else}}
  <h5 class="mt-3">Nenhum Funcionário Registrado! </h5>
{{/each}}
