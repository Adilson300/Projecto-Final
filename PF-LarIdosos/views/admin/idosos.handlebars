<h2 class="mt-3">Lista de Idosos</h2>
<br>
<a href="/admin/idosos/add">
    <button class="btn btn-primary">Novo Idoso</button>
</a>

{{#each idosos}}
  <div class="card mt-4">
      <div class="card-body">
            <h4>{{nomecompleto}}</h4>
            <small>Nome a ser Tratado: {{nometratado}}</small><br>
            <small>Número de Processo: {{nprocesso}}</small><br>
            <small>Idade: {{idade}}</small><br>
            <small>Doenças Crônicas: {{doencacronica}}</small><br>
            <small>Nome do Parente: {{nomeparente}}</small><br>
            <a href="/admin/idosos/edit/{{_id}}"><button class="btn btn-primary mt-4">Editar </button></a>
      </div>
  </div>

  {{else}}
  <h5 class="mt-3">Nenhum Idoso Registrado! </h5>
{{/each}}
