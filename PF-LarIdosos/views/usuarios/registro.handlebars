{{#each erros}}
  <div class="alert alert-danger">{{texto}}</div>
  {{else}}
{{/each}}

<h3>Criação de usuário</h3>
<div class="card">
	<div class="card-body"> 

        <form action="" method="POST">
				<label for="nome">Nome </label>
				<input type="text" name="nome" class="form-control"   style="border: 2px solid #ccc;width: 90%;" required>

                <label for="email">Email </label>
				<input type="email" name="email" class="form-control"   style="border: 2px solid #ccc;width: 90%;" required>

                <label for="senha">Senha </label>
				<input type="password" name="senha" class="form-control"   style="border: 2px solid #ccc;width: 90%;" required>

                <label for="senha2">Repita a sua senha: </label>
				<input type="password" name="senha2" class="form-control"   style="border: 2px solid #ccc;width: 90%;" required>
			 
				
        
			<button class="btn btn-primary mt-4" type="submit">Criar Usuário</button>
			
        </form>
    </div>
</div>